{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": false,
    "strict": false,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "jsx": "react",
    "outDir": "../dist",
    "rootDir": "..",
  },
  "include": [
    "src",
  ],
  "references": [
    { "path": "../shared" }
  ]
}