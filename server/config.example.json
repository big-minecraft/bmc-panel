{
  "environment": "production",
  "panel-host": "0.0.0.0",
  "bmc-path": "/host-root/var/lib/baremetal/big-minecraft",
  "redis": {
    "host": "redis-service",
    "port": 6379
  },
  "k8s": {
    "configPath": "/etc/rancher/k3s/k3s.yaml"
  },
  "mariadb": {
    "host": "mariadb-service",
    "port": 3306,
    "username": "root",
    "password": "admin",
    "database": "bmc"
  },
  "mongodb": {
    "host": "mongodb-service",
    "port": 27017,
    "username": "admin",
    "password": "admin",
    "database": "admin"
  },
  "sftp": {
    "host": "sftp-service",
    "port": 22,
    "username": "root",
    "password": "password"
  },
  "prometheus": {
    "host": "prometheus-service",
    "port": 9090
  },
  "token-secret": "secret",
  "invite-code-expiry-days": 7,
  "max-upload-size-mb": 100
}
