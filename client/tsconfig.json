{
  "compilerOptions": {
    /* Module and Resolution Configuration */
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "useDefineForClassFields": true,
//    "baseUrl": ".",
//    "paths": {
//      "@shared/*": ["../shared/*"]
//    },

    /* Source Map and Import Options */
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* React Configuration */
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
//    "noUnusedLocals": true,
//    "noUnusedParameters": true,
//    "noFallthroughCasesInSwitch": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "src",
    "../shared",
    "vite.config.ts",
    "tsconfig.json"
  ]
}